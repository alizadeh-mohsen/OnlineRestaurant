@model IEnumerable<OnlineRestaurant.MVC.Models.CouponDto>

@{
    ViewData["Title"] = "Coupons";
}

<h2>Coupons</h2>

@if (TempData["success"] != null)
{
    <div class="alert alert-success">@TempData["success"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Coupon Code</th>
            <th>Discount Amount</th>
            <th>Minimum Amount</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var coupon in Model)
            {
                <tr>
                    <td>@coupon.CouponCode</td>
                    <td>@coupon.DiscountAmount</td>
                    <td>@coupon.MinAmount</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@coupon.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@coupon.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@coupon.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No coupons found.</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Coupon</a>
